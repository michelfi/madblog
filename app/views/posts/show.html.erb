<div class="container-post mt-3 mb-3">
  <h2><%= @post.title %></h2>
  <p class="post-category"><%= @post.category %></p>
  <p class="post-date"><%= @post.created_at.strftime("%d %B %Y") %></p>
  <% if @post.image.attached? %>
    <% if @post.image.variable? %>
      <%= image_tag @post.image, class: "post-image" %>
    <% else %>
      <video controls width="400" height="300" class="post-video">
        <source src="<%= url_for(@post.image) %>" type="video/webm">
        Your browser does not support the video tag.
      </video>
    <% end %>
  <% end %>
  <p class="post-content"><%= @post.content %></p>
  <% if user_signed_in? && current_user == @post.user %>
    <div class="d-flex justify-content-between">
      <%= link_to "Editer l'article", edit_post_path(@post), class: "btn btn-primary" %>
      <%= link_to "Supprimer l'article", post_destroy_path(@post), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer l'offre?" }, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
