<div class="container">
  <h2>Profil de <%= @user.email %></h2>
  <br>
  <div class="avatar-container">
    <p><%= image_tag @user.avatar, class: "avatar-profile" %></p>
    <p><b>Email :</b> <%= @user.email %></p>
    <%= link_to "Modifier le profil", edit_user_registration_path, class: "btn btn-primary" %>
  <!-- Vous pouvez ajouter plus d'informations ici -->
  </div>
</div>
<br />
<div class="container py-4">
  <h4 class="rounded-background">Vos articles en ligne</h4>
  <div class="mt-3 cards-hp mx-auto">
    <% @posts.each do |post| %>
      <% if post.user == current_user %>
        <div class="card-trip">
          <% if post.image.attached? %>
            <% if post.image.variable? %>
              <%= image_tag post.image %>
            <% else %>
              <video controls>
                <source src="<%= url_for(post.image) %>" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            <% end %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <strong><%= link_to post.title, post_path(post) %></strong>
            </div>
              <% if post.user == current_user %>
                <%= link_to "Modifier", edit_post_path(post), class: "btn btn-primary" %>
                <%= link_to "Supprimer", post_destroy_path(post), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer l'offre?" }, class: "btn btn-danger" %>
              <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
